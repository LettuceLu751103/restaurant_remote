<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-warning" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<div class="container mt-5">
  <div class="row ">
    {{!-- 底下元素靠右, row 添加 justify-content-end --}}
    <a href='/new' class="btn btn-primary mb-2 text-light ml-3">Add Restaurant</a>
  </div>
  <div class="row">

    {{#each data }}
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 mx-auto">

      <div class="card mb-1">
        <img class="card-img-top" {{#if this.image}}src="{{this.image}}"
          {{else}}src="https://i2.wp.com/www.mykhe2hotel.com/wp/wp-content/uploads/2014/01/%E9%A7%84%E7%9B%AE%E3%81%AA%E3%81%AE%E3%81%8B%EF%BC%9F-300x300.jpg"
          {{/if}}>
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{ this.name }}</h6>

          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i> {{ this.category}}
          </div>

          <span class="badge badge-pill badge-danger font-weight-normal">
            {{ this.rating }}
            <i class="fas fa-star fa-xs"></i>
          </span>

        </div>
      </div>

      <div class="row mb-3  justify-content-end ">
        <div class="col-md-3"><a href='/edit/{{this._id}}'>Edit</a></div>
        <div class="col-md-3"><a href='/restaurants/{{this._id}}'>Deatil</a></div>
        <div class="col-md-3 mr-2"><a href="#">Delete</a></div>
      </div>

    </div>
    {{/each}}
  </div>
</div>